{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^5.4.3"
  },
  "scripts": {
    "test": "lerna run test --stream",
    "lint": "lerna run lint --stream",
    "lint:strict": "lerna run lint:strict --stream",
